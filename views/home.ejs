            position: relative;
            width: 100%;
            height: 540px;
        }

        .banner-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
             /*object-fit: cover;*/
            opacity: 0;
            transition: 1s;
        }

        .banner-slide.active {
            opacity: 1;
        }

