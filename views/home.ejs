<script>
(function(){
  const track = document.getElementById('carouselTrack');
  const slides = Array.from(track.children);
  const prevBtn = document.getElementById('colPrev');
  const nextBtn = document.getElementById('colNext');
  const visibleDesktop = 3;
  const visibleTablet = 2;
  let visible = visibleDesktop;
  let index = 0;
  let timer = null;

  function calcVisible() {
    if (window.innerWidth <= 576) return 1;
    if (window.innerWidth <= 992) return visibleTablet;
    return visibleDesktop;
  }

  function updateSizes() {
    visible = calcVisible();
    // set transform based on index and slide width
    const slideWidth = slides[0].getBoundingClientRect().width + parseFloat(getComputedStyle(track).gap || 22);
    const offset = index * (slideWidth);
    track.style.transform = `translateX(-${offset}px)`;
    updateActiveClass();
  }

  function clampIndex(i) {
    // allow infinite loop behaviour by wrapping
    const maxIndex = Math.max(0, slides.length - visible);
    if (i < 0) return maxIndex;
    if (i > maxIndex) return 0;
    return i;
  }

  function updateActiveClass() {
    slides.forEach(s => s.classList.remove('active'));
    // center slide index = index + Math.floor(visible/2)
    const centerPos = index + Math.floor(visible/2);
    if (slides[centerPos]) slides[centerPos].classList.add('active');
  }

  function next() {
    index = clampIndex(index + 1);
    updateSizes();
    restartTimer();
  }
  function prev() {
    index = clampIndex(index - 1);
    updateSizes();
    restartTimer();
  }

  function restartTimer() {
    if (timer) clearInterval(timer);
    timer = setInterval(next, 5000);
  }

  // init
  window.addEventListener('resize', () => {
    // recompute when resize; small debounce
    clearTimeout(window._carouselResizeTimeout);
    window._carouselResizeTimeout = setTimeout(updateSizes, 120);
  });

  // wire buttons
  prevBtn.addEventListener('click', prev);
  nextBtn.addEventListener('click', next);

  // initial layout after fonts/images load
  window.addEventListener('load', () => {
    // small delay to ensure images measured
    setTimeout(() => {
      updateSizes();
      restartTimer();
    }, 120);
  });

  // allow tapping center slide to pause/resume
  track.addEventListener('click', (e) => {
    if (timer) { clearInterval(timer); timer = null; } else restartTimer();
  });
})();
</script>

