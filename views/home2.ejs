    font-size: 20px;
    font-weight: 600;
    color: #222;
    text-align: center;
}

/* GRID */
.tile-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 22px;
    margin-top: 40px;
}

/* Layout positions */
.tile-left {
    grid-column: 1;
    grid-row: 1 / span 2;
}

.tile-middle-top {
    grid-column: 2;
    grid-row: 1;
}

.tile-middle-bottom {
    grid-column: 2;
    grid-row: 2;
}

.tile-right {
    grid-column: 3;
    grid-row: 1 / span 2;
}

/* Mobile layout */
@media (max-width: 768px) {
    .tile-grid {
        grid-template-columns: 1fr;
    }

    .tile-left, .tile-right,
    .tile-middle-top, .tile-middle-bottom {
        grid-column: auto;
        grid-row: auto;
    }

    .tile-img {
        max-height: 260px;
    }
}

