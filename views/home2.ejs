    <style>
        :root {
            --primary: #B8860B;
            --dark: #111;
            --light: #F8F5F1;
        }

        body {
            margin: 0;
            font-family: Inter, sans-serif;
            background: var(--light);
            color: var(--dark);
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: auto;
        }

        /* ================= HEADER ================= */
        .header {
            background: var(--light);
            border-bottom: 1px solid #e4e4e4;
            padding: 6px 0;
        }

        .desktop-only { display: flex; }
        .mobile-only { display: none; }

        .header-grid {
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            align-items: center;
            position: relative;
        }

        /* Left Info (Desktop Only) */
        .left-info {
            display: flex;
            align-items: center;
            gap: 18px;
        }

        .info-item {
            display: flex;
            flex-direction: column;
        }

        .label {
            font-size: 11px;
            font-weight: 700;
            color: #555;
            letter-spacing: 0.7px;
        }

        .value {
            font-size: 13px;
            margin-top: 2px;
        }

        .vertical-divider {
            width: 1px;
            height: 36px;
            background: #dcdcdc;
        }

        /* Center Logo */
        .header-logo img {
            height: 80px;
        }

        /* Right Info */
        .right-info {
            display: flex;
            align-items: center;
            gap: 14px;
            justify-content: flex-end;
        }

        .search-box {
            padding: 8px 12px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        .today-rate {
            font-weight: 600;
            color: var(--primary);
        }

        /* ================= MOBILE RIGHT ICONS ================= */
        .mobile-icons {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            display: flex;
            gap: 18px;
        }

        .m-icon {
            width: 26px;
            height: 26px;
            stroke: #111;
        }

        /* ================= MENU BAR ================= */
        .menu-bar {
            background: #fff;
            border-top: 1px solid #eee;
            border-bottom: 1px solid #eee;
        }

        .menu-list {
            list-style: none;
            display: flex;
            justify-content: center;
            gap: 32px;
            padding: 16px 0;
            margin: 0;
        }

        .menu-list li a {
            text-decoration: none;
            font-size: 15px;
            font-weight: 600;
            color: #000;
        }

        .menu-list li a.active {
            color: var(--primary);
        }

        /* ================= HERO BANNER ================= */
        .hero-banner {
            width: 100%;
            overflow: hidden;
        }

        .banner-wrapper {
            position: relative;
            width: 100%;
            height: 540px;
        }

        .banner-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: 1s;
        }

        .banner-slide.active {
            opacity: 1;
        }

        /* ================== RESPONSIVE ================== */
        @media (max-width: 768px) {
            .desktop-only { display: none; }
            .mobile-only { display: flex !important; }

            .header-grid {
                grid-template-columns: auto 1fr;
            }

            .header-logo {
                margin-left: 10px;
            }

            .header-logo img {
                height: 60px;
            }

            .banner-wrapper {
                height: 220px;
            }
        }

/* Hide mobile icons on desktop */
@media (min-width: 769px) {
    .mobile-only {
        display: none !important;
    }
}

/* ================= MOBILE SLIDE MENU ================= */
.mobile-menu {
    position: fixed;
    top: 0;
    left: -320px; /* hidden by default */
    width: 260px;
    height: 100vh;
    background: #fff;
    box-shadow: 3px 0 8px rgba(0,0,0,0.15);
    padding: 20px;
    transition: 0.35s ease;
    z-index: 9999;
}

.mobile-menu.active {
    left: 0;
}

.mobile-menu h3 {
    margin-top: 0;
    font-size: 20px;
    font-weight: 700;
}

/* Mobile search bar */
.mobile-search-bar {
    position: fixed;
    top: -70px;
    left: 0;
    right: 0;
    background: #fff;
    padding: 12px;
    border-bottom: 1px solid #ddd;
    z-index: 9998;
    transition: 0.35s ease;
}

.mobile-search-bar.active {
    top: 0;
}

.mobile-search-bar input {
    width: 94%;
    padding: 10px 14px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 15px;
}

/* AUTO SCROLL BANNER */
.scroll-banner {
    background: #fff;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    padding: 10px 0;
    overflow: hidden;
    white-space: nowrap;
}
.scroll-banner span {
    display: inline-block;
    padding-left: 100%;
    animation: bannerMove 15s linear infinite;
    font-size: 15px;
}
@keyframes bannerMove {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
}


/* ================= CATEGORY TILE SECTION ================= */
.category-section {
    padding: 50px 0;
}

.category-grid {
    display: grid;
    gap: 24px;
    grid-template-columns: repeat(3, 1fr);
}

/* Tile Box */
.category-tile {
    background: #fff;
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    text-align: center;
    transition: transform .2s ease, box-shadow .2s ease;
}

.category-tile:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 16px rgba(0,0,0,0.12);
}

.category-tile img {
    width: 100%;
    height: 260px;
    object-fit: cover;
}

.category-tile h3 {
    margin: 15px 0 18px;
    font-size: 20px;
    font-family: 'Playfair Display', serif;
    color: #222;
}

/* ============ RESPONSIVE ============ */
@media (max-width: 992px) {
    .category-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 576px) {
    .category-grid {
        grid-template-columns: 1fr;
    }

    .category-tile img {
        height: 200px;
    }
}

